<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#DBF8F5"
    android:padding="@dimen/_10sdp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="@dimen/_20sdp"
        android:layout_weight="3"
        android:background="@drawable/border_drawable_shape"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_no_time_limit_button"
            app:backgroundTint="@color/teal_700"
            android:text="NO TIME LIMIT"
            android:textSize="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_normal_button"
            app:backgroundTint="@color/teal_700"
            android:text="NORMAL"
            android:textSize="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_hard_button"
            app:backgroundTint="@color/teal_700"
            android:text="HARD"
            android:textSize="@dimen/_20sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:layout_weight="1.5"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/border_drawable_shape">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_remove_ads_button"
            app:backgroundTint="@color/teal_700"
            android:text="REMOVE ADS"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp"
           />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_150sdp"
        android:orientation="horizontal"
        android:layout_margin="@dimen/_20sdp"
        android:background="@drawable/border_drawable_shape"
        android:layout_weight="1.5">
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_share_button"
            app:backgroundTint="@color/teal_700"
            android:text="SHARE"
            android:textSize="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/activity_main_more_games_button"
            app:backgroundTint="@color/teal_700"
            android:text="MORE GAMES"
            android:textSize="@dimen/_10sdp"
            android:layout_margin="@dimen/_10sdp"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>